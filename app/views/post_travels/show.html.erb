<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @post_travel.name %>
</p>

<p>
  <strong>Destination:</strong>
  <%= @post_travel.destination %>
</p>

<p>
  <strong>Start date:</strong>
  <%= @post_travel.start_date %>
</p>

<p>
  <strong>End date:</strong>
  <%= @post_travel.end_date %>
</p>

<p>
  <strong>Purpose:</strong>
  <%= @post_travel.purpose %>
</p>



<p>
  <strong>Actual expenses:</strong>
  <%= @post_travel.actual_expenses %>
</p>

<p>
  <strong>Payment infomation:</strong>
  <%= @post_travel.payment_infomation %>
</p>

<p>
  <strong>The receipts (Click on link to view Receipts):</strong>
  <%=  @post_travel.receipt.url %>
  <%= link_to "View Receipts Pdf", @post_travel.receipt_url %>
</p>


<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Expense</th>
          <th>Cost</th>
          <th>Payment Information</th>
        </tr>
      </thead>
      <tbody>
        <% @actuals.each do |actual| %>
          <tr>
            <td><h4><%= actual.expense %></h4></td>
            <td><h4>$<%= actual.cost %></h4></td>
            <td><h4><%= actual.payment_information %></h4></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>










<%= link_to 'Edit', edit_post_travel_path(@post_travel) %> |
<%= link_to 'Back', post_travels_path %>



<%= link_to "Add New Expense", new_post_travel_actual_path(@post_travel), class: 'pull-right'%>
