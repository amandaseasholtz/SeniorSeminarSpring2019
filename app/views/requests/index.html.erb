                  <%= form.label :Status %>
                  <%= form.select :status, options_for_select([["Choose Status", ""], "Accept", "Reject", "Resubmit"])%>
                </div>
                  <%= form.label :Notes %>
                  <%= form.text_area :reasoning, id: :request_reasoning, rows: 5, cols: 30 %>
