<h1>Requests</h1>
<% if current_account.accountable_type == "Employee" %>

<table>
  <thead>
    <tr>

      <th>Name</th>
      <th>Status</th>
      <th>Destination</th>
      <th>Start Date</th>
      <th>End Date</th>
      <th>Purpose</th>


      <th>Notes from Budget approver</th>
      <th>Resubmissions</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.name %></td>

        <%if request.status == nil%>
          <td>Pending</td>
        <%elsif request.status == "Accept"%>
          <td>Accepted</td>
        <%elsif request.status == "Resubmit"%>
        <td>Resubmit</td>
        <%else%>
          <td>Rejected</td>
        <%end%>




          <td><%= request.destination %></td>
          <td><%= request.start_date %></td>
          <td><%= request.end_date %></td>
          <td><%= request.purpose %></td>



          <td><%= request.reasoning %></td>
          <%if request.status == "Resubmit"%>

          <td>
            <%= form_with(model: request, local: true) do |f| %>
              <div class="field">
                <%= f.select :status, options_for_select([["Resubmit by ", ""], "RESUBMIT"])%>
              </div>
              <div class="actions">
              <%= f.submit %>
            </div>
            <%end%>
          </td>
  
  
          <%end%> 
          <td><%= link_to 'Show', request %></td>
          <td><%= link_to 'Edit', edit_request_path(request) %></td>
          <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      
          </tr>
    <% end %>
  </tbody>
</table>
<%end%>



<% if current_account.accountable_type == "Budget" %>
  <table>
    <thead>
      <tr>
        <th> name</th>
        <th> Your Choice</th>
        <th> Your Departments Budget</th>


        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @requests.each do |request| %>
        <%if request.budget_name == "bobby" || request.budget_name2 == "bobby" || request.budget_name3 == "bobby" %>
          <tr>
          
            <td><%= request.name %></td>
            <%if request.status == "RESUBMIT"%>
              <td>HAS BEEN UPDATED</td>
    
            <%end%>
            <td><%= request.status%></td>

            <%if request.expected_costs2 == nil%>
              <%request.expected_costs2 = 0%>
            <%end%>


            <%if request.expected_costs3 == nil%>
              <%request.expected_costs3 = 0%>
            <%end%>


            <%if request.status == "Accept"%>
            <td><%= current_account.budget - request.expected_costs - request.expected_costs2 - request.expected_costs3 = 0 %></td>
            <%else%>
              <td>$<%= current_account.budget %></td>
            <%end%>

            <td><%= link_to 'Show', request %></td>



            <%if request.status == nil || request.status == "Pending" || request.status == "RESUBMIT"  %>
            <td>
              <%= form_with(model: request, local: true) do |f| %>
                <div class="field">
                  <%= f.select :status, options_for_select([["Choose Status", ""], "Accept", "Reject", "Resubmit"])%>
                </div>
                <div>
                  <%= f.label :Notes %>
                  <%= f.text_area :reasoning, id: :request_reasoning, rows: 5, cols: 30 %>
                </div>






                <div class="actions">
                  <%= f.submit %>
                </div>
              <%end%>
            </td>
    
          <%end%>


          </tr>
        <%elsif request.budget_name == "brenda" || request.budget_name2 == "brenda" || request.budget_name3 == "brenda"%>
