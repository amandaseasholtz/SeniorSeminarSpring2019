        <%if @request.budget_name == nil%>
        <div class="field">
          <%= form.select :budget_name,[['bobby','bobby']] %>
        </div>
        <div class="actions">
          <%= form.submit %>
        </div>
        <%else%>
        <%end%>
      <%end%>
    </td>
    <%end%>
    
    
    <%end%>
<%end%>






