    <strong>Expected Costs:</strong>
    <%= @expense.expected_costs %>
</p>

<p>
  <strong>Notes:</strong>
  <%= @request.reasoning %>
</p>



<% if current_account.accountable_type == "Budget" %>
<p>
  <Strong>Your Departments Budget</Strong>
  $<%=current_account.budget%>
</p>
<%end%>

<%if @request.status == "Accept"%>
<% @expects.each do |expect| %>

    <%= current_account.budget =  current_account.budget - expect.expected_costs%>


<%end%>


<%end%>


<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Expense</th>
          <th>Cost</th>
          <th>Payment Information</th>
        </tr>
      </thead>
      <tbody>
        <% @expects.each do |expect| %>
          <tr>
            <td><h4><%= expect.expected_expenses %></h4></td>
            <td><h4>$<%= expect.expected_costs %></h4></td>
            <td><h4><%= expect.payment_information %></h4></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>










<% if current_account.accountable_type == "Employee" %>
  <%= link_to 'Edit', edit_request_path(@request) %> |
  <% @expects.each do |expect| %>
    <% if expect.payment_information == "Dept1" %>
    <td>
      <%= form_with(model: @request, local: true) do |form| %>
        <%if @request.budget_name == nil%>
        <div class="field">
          <%= form.select :budget_name,[['billy','billy']] %>
        </div>
        <div class="actions">
          <%= form.submit %>
        </div>
        <%else%>
        <%end%>
      <%end%>
    </td>
    <%end%>
    
   
    <% if expect.payment_information == "Dept2" %>
    <td>
      <%= form_with(model: @request, local: true) do |form| %>

        <%if @request.budget_name == nil%>
        <div class="field">
          <%= form.select :budget_name,[['brenda','brenda']] %>
        </div>
