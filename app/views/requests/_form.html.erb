<%= form_with(model: request, local: true) do |form| %>
  <% if request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(request.errors.count, "error") %>
      prohibited this request from being submitted:</h2>
      <ul>
        <% request.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>

    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :request_name %>
  </div>

  <div class="field">
    <%= form.label :Destination %>
    <%= form.text_field :destination, id: :request_destination, size: 40 %>
  </div>

  <div class="field">
    <%= form.label :Requested_Travel_Days %>
    <%= form.text_field :requested_travel_days, id: :request_requested_travel_days, size: 40 %>
  </div>

  <div class="field">
    <%= form.label :purpose %>
    <%= form.text_area :purpose, id: :request_purpose, rows: 10, cols: 60 %>
  </div>

  <div class="field">
    <%= form.label :Expected_Expenses %>
    <%= form.text_area :expected_expenses, id: :request_expected_expenses, rows: 4, cols: 40 %>
  </div>

  <div class="field">
    <%= form.label :payment_Information %>
    <%= form.text_area :payment_information, id: :request_payment_information, rows: 4, cols: 40 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

<% end %>