<html lang="en">

<header>
<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center">
           
        </div>
    </div>

    <div class="nav">
        <ul>
            <li> <%= link_to "Home", homepage_index_path %> </li>
            <li> <%= link_to "Request Travel", say_request_path %> </li>
            <li> <%= link_to "Travel History", say_history_path %> </li>
            <li> <%= link_to "My Info", say_info_path %> </li>
            <li> <%= link_to "Post-Travel", say_post_path %> </li>
        </ul>
    </div>

</div>
</header>

<body>

<%= form_with do |form| %>

    <div class="field">
        <%= form.label :ID %>
        <%= form.text_field :name, id: :order_name, size: 40 %>
    </div>

    <div class="field">
      <%= form.label :Name %>
      <%= form.text_field :name, id: :order_name, size: 40 %>
    </div>
  


    <div class="field">
        <%= form.label :Destination %>
        <%= form.text_field :purpose, id: :request_purpose, size: 40 %>
    </div>


    <div class="field">
        <%= form.label :"Requested Travel Days" %>
        <%= form.text_field :purpose, id: :request_purpose, size: 40 %>
    </div>



    <div class="field">
      <%= form.label :Purpose %>
      <%= form.text_area :purpose, id: :request_purpose, rows: 4, cols: 40 %>
    </div>

    <div class="field">
        <%= form.label :"Expected Expenses" %>
        <%= form.text_area :purpose, id: :request_purpose, rows: 4, cols: 40 %>
    </div>

    <div class="field">
        <%= form.label :"payment Information" %>
        <%= form.text_area :purpose, id: :request_purpose, rows: 4, cols: 40 %>
    </div>
  
    <div class="actions">
      <%= form.submit 'Submit' %>
    </div>
  <% end %>

    
</body>
</html>