<% if @budget.name.nil? or @budget.name == "" %>
    <h2>Edit Budget Approvers's Profile</h2>
<% else %>
    <h2>Edit <%= @budget.name %>'s Profile</h2>
<% end %>

<%= simple_form_for(@budget, as: @budget, url: budget_path(@budget), html: { method: :patch }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, required: true, autofocus: true %>
    <%= f.input :bid, required: true %>
    <%= f.select :department, options_for_select([["Choose Department(s)", ""], "Dept1", "Dept2", "Dept3"])%>
    <%= f.input :title, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>