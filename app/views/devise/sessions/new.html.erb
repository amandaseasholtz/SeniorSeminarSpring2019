<!--
    you can substitue the span of reauth email for a input with the email and
    include the remember me checkbox
    -->
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="container">
        <div class="card card-container">
            <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
            
            <form class="form-signin">
                <span id="reauth-email" class="reauth-email"></span>
                <%= f.input :email,required: false,autofocus: true,input_html: { autocomplete: "email" } %>
                <%= f.input :password,required: false,input_html: { autocomplete: "current-password" } %>

                <div id="remember" class="checkbox">
                    <label>

                          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                    </label>
                </div>
                <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Log in</button>

            </form><!-- /form -->
            <a href="#" class="forgot-password">
                <%= render "devise/shared/links" %>
            </a>
        </div><!-- /card-container -->
    </div><!-- /container -->
<% end %>
